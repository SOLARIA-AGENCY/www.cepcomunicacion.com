# ========================================
# CEPComunicacion v2 - Local Development Environment Variables
# ========================================
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to version control
#
# Usage:
#   cp .env.local.template .env.local
#   # Edit .env.local with your local credentials
#   pnpm dev
#
# ========================================

# ========================================
# DATABASE (PostgreSQL 16)
# ========================================
POSTGRES_DB=cepcomunicacion
POSTGRES_USER=cepadmin
POSTGRES_PASSWORD=devpassword123

# Full connection string (used by applications)
DATABASE_URL=postgresql://cepadmin:devpassword123@localhost:5432/cepcomunicacion

# Connection pool settings (optional)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ========================================
# REDIS (Cache + Queue)
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ========================================
# PAYLOAD CMS
# ========================================
PAYLOAD_SECRET=local-dev-secret-change-me-in-production
PAYLOAD_CONFIG_PATH=./apps/cms/src/payload.config.ts
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3002

# ========================================
# FRONTEND (React + Vite)
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3002/api
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_LLM=false
NEXT_PUBLIC_ENABLE_WHATSAPP=false

# Analytics (optional - leave blank for local dev)
NEXT_PUBLIC_GA4_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=

# ========================================
# ADMIN DASHBOARD (Next.js)
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3002/api
NEXT_PUBLIC_ENABLE_DEV_LOGIN=true
PORT=3001
HOSTNAME=0.0.0.0

# ========================================
# FILE STORAGE (MinIO S3-Compatible)
# ========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=cep-uploads
S3_BACKUP_BUCKET=cep-backups
S3_REGION=us-east-1
S3_PUBLIC_URL=http://localhost:9000

# ========================================
# EMAIL (MailHog for testing)
# ========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@cepcomunicacion.local
SMTP_FROM_NAME=CEP Comunicaci√≥n (Dev)

# ========================================
# BULLBOARD (Queue Monitoring)
# ========================================
BULLBOARD_USER=admin
BULLBOARD_PASSWORD=admin

# ========================================
# EXTERNAL APIS (Optional - leave blank for local dev)
# ========================================

# Meta Ads API (Facebook/Instagram)
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=
META_PIXEL_ID=

# Mailchimp
MAILCHIMP_API_KEY=
MAILCHIMP_SERVER_PREFIX=
MAILCHIMP_LIST_ID=

# WhatsApp Cloud API
WHATSAPP_PHONE_ID=
WHATSAPP_ACCESS_TOKEN=

# LLM APIs (OpenAI/Anthropic)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
LLM_PROVIDER=none

# ========================================
# FEATURE FLAGS (Local Dev)
# ========================================
NODE_ENV=development
ENABLE_META_INTEGRATION=false
ENABLE_MAILCHIMP_INTEGRATION=false
ENABLE_WHATSAPP_INTEGRATION=false
ENABLE_LLM_INTEGRATION=false
ENABLE_ANALYTICS=false
ENABLE_DEV_LOGIN=true

# ========================================
# CORS (Local Dev)
# ========================================
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:3001,http://localhost:3002

# ========================================
# BACKUP (Optional for local dev)
# ========================================
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7

# ========================================
# DOCKER DEBUGGING
# ========================================
# Enable hot reload for Docker volumes
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Enable verbose logging
DEBUG=payload:*
LOG_LEVEL=debug
